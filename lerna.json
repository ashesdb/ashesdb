{
	"version": "independent",
	"packages": ["packages/*"],
	"npmClient": "yarn",
	"useWorkspaces": true,
	"command": {
		"publish": {
			"verifyAccess": false,
			"yes": true
		},
		"version": {
			"conventionalCommits": true,
			"message": "chore(release): publish",
			"noCommitHooks": true,
			"yes": true
		}
	}
}
